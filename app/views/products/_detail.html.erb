<%= form_for [@product], id: 'product', remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <p><%= f.submit :class => "btn btn-primary " %></p>
<% end %>
